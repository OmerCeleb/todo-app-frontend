# ================================================
# TODO APP - FRONTEND ENVIRONMENT VARIABLES
# ================================================
# Copy this file to .env.local and fill in the values
# Never commit .env.local to version control!

# ================================================
# API CONFIGURATION
# ================================================

# Backend API Base URL
# Development: http://localhost:8080
# Production: https://api.yourdomain.com
VITE_API_BASE_URL=http://localhost:8080

# API Request Timeout (milliseconds)
# Default: 10000 (10 seconds)
VITE_API_TIMEOUT=10000

# ================================================
# FEATURE FLAGS
# ================================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_OFFLINE_MODE=true

# ================================================
# ENVIRONMENT
# ================================================

# Environment mode: development | production | staging
VITE_APP_ENV=development

# App version (automatically set from package.json)
VITE_APP_VERSION=1.0.0

# ================================================
# PERFORMANCE
# ================================================

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Bundle size warnings
VITE_BUNDLE_SIZE_LIMIT=500

# ================================================
# SECURITY
# ================================================

# Enable strict mode
VITE_STRICT_MODE=true

# CORS allowed origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ================================================
# DEVELOPMENT TOOLS
# ================================================

# Enable React DevTools
VITE_REACT_DEVTOOLS=true

# Enable debug logging
VITE_DEBUG=false

# Show performance metrics in console
VITE_SHOW_PERFORMANCE=false

# ================================================
# THIRD-PARTY SERVICES (Optional)
# ================================================

# Google Analytics ID
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ================================================
# NOTES
# ================================================
#
# 1. All variables must be prefixed with VITE_ to be exposed to the app
# 2. Variables are embedded at build time (not runtime)
# 3. Use .env.local for local overrides (gitignored)
# 4. Use .env.production for production builds
# 5. Never commit sensitive data like API keys
#